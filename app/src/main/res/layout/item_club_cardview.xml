<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/club_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="1dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/clubNameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:padding="18dp">

            <TextView
                android:id="@+id/club_cardview_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/club_cardview_memberCntTv"
                android:text="동호회 명"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/club_cardview_contentTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/club_cardview_nameTv"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/club_cardview_memberCntTv"
                android:text="동호회 내용"
                android:textColor="#585858"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/club_cardview_memberCntTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/edge_club_item"
                android:padding="3dp"
                android:text="230명"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/club_detailContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorWhite"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호 :  "
                style="@style/ClubDetailTextView"/>

            <TextView
                android:id="@+id/clutDetail_tellNumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="042)392-4922"
                style="@style/ClubDetailTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기준일자 :  "
                style="@style/ClubDetailTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.08.12"
                style="@style/ClubDetailTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운영시간 :  "
                style="@style/ClubDetailTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.08.12"
                style="@style/ClubDetailTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기준일자 :  "
                style="@style/ClubDetailTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.08.12"
                style="@style/ClubDetailTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기준일자 :  "
                style="@style/ClubDetailTextView"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.08.12"
                style="@style/ClubDetailTextView"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>




