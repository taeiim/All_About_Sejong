<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <android.support.v7.widget.CardView
            android:id="@+id/club_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <TextView
                    android:id="@+id/club_cardview_nameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동호회 명"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:layout_toLeftOf="@+id/club_cardview_memberCntTv"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/club_cardview_contentTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/club_cardview_nameTv"
                    android:layout_marginTop="4dp"
                    android:text="24"
                    android:textColor="#585858"
                    android:textSize="13dp"
                    android:layout_toLeftOf="@+id/club_cardview_memberCntTv"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/club_cardview_memberCntTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/edge_club_item"
                    android:text="230명"
                    android:textSize="12dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:padding="3dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>




