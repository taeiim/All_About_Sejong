<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="#E53935" />

            <ImageView
                android:id="@+id/centerDetail_backIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/icon_back_white" />

            <TextView
                android:id="@+id/centerDetail_nameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="45dp"
                android:text="예쁜별어린이집"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="90dp"
                app:cardBackgroundColor="#F0FFFFFF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/icon_school_bus"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="통학버스 운영"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/icon_home"
                            android:layout_marginBottom="5dp"
                            android:padding="3dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가정"
                            android:textColor="#000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/icon_phone"
                            android:layout_marginBottom="5dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화 걸기"
                            android:textColor="#000"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/centerDetail_cardview_height"
                android:layout_marginBottom="@dimen/centerDetail_cardview_marginBottom"
                app:cardCornerRadius="@dimen/centerDetail_cardview_corner"
                app:cardElevation="@dimen/centerDetail_cardview_elevation">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="@dimen/centerDetail_cardview_iconSize"
                        android:layout_height="@dimen/centerDetail_cardview_iconSize"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_cctv" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/img1"
                        android:text="CCTV 설치수"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="12"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_bigTextSize" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/centerDetail_cardview_height"
                android:layout_marginBottom="@dimen/centerDetail_cardview_marginBottom"
                app:cardCornerRadius="@dimen/centerDetail_cardview_corner"
                app:cardElevation="@dimen/centerDetail_cardview_elevation">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="@dimen/centerDetail_cardview_iconSize"
                        android:layout_height="@dimen/centerDetail_cardview_iconSize"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_center_teacher" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/img2"
                        android:text="교직원수"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="7"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_bigTextSize" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/centerDetail_cardview_height"
                android:layout_marginBottom="@dimen/centerDetail_cardview_marginBottom"
                app:cardCornerRadius="@dimen/centerDetail_cardview_corner"
                app:cardElevation="@dimen/centerDetail_cardview_elevation">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="@dimen/centerDetail_cardview_iconSize"
                        android:layout_height="@dimen/centerDetail_cardview_iconSize"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_kindergarden_child" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/img3"
                        android:text="정원수"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="80"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_bigTextSize" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/centerDetail_cardview_height"
                android:layout_marginBottom="@dimen/centerDetail_cardview_marginBottom"
                app:cardCornerRadius="@dimen/centerDetail_cardview_corner"
                app:cardElevation="@dimen/centerDetail_cardview_elevation">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="24dp">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="@dimen/centerDetail_cardview_iconSize"
                        android:layout_height="@dimen/centerDetail_cardview_iconSize"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_center_room"
                        android:padding="2dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/img4"
                        android:text="보육실수"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_textSize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="24dp"
                        android:text="12"
                        android:textColor="#000"
                        android:textSize="@dimen/centerDetail_cardview_bigTextSize" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="8dp">

                <fragment
                    android:id="@+id/googleMap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    class="com.google.android.gms.maps.MapFragment"/>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>